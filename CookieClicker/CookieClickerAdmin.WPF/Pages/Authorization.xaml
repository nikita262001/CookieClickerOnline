<Page x:Class="CookieClickerAdmin.WPF.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookieClickerAdmin.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Логин: "/>
                <TextBox x:Name="txtLog" Tag="Введите логин" Height="auto" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Пароль: "/>
                <TextBox x:Name="txtPas" Tag="Введите пароль" Height="auto" Width="300"/>
            </StackPanel>
            <Button Width="225" Height="35" Margin="10" Content="Войти" Click="ButtonAuthorization_Click"/>
        </StackPanel>
    </Grid>
</Page>
